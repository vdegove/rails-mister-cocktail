<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<h2>Recipe</h2>

<ul>

<% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %>: <%= dose.description %>. <%= link_to "(Remove)", dose_path(dose), method: :delete %></li>
<% end %>
</ul>
  <%= link_to('Back to cocktail list', cocktails_path) %> | <%= link_to('Add a new ingredient to the recipe', new_cocktail_dose_path(@cocktail)) %>
